        <span class="slide1-subtitle">{{ _slide.bar_3.title }}<br></span>
        <span class="slide1-number">{{ _slide.bar_3.number }}<br></span><p class="slide1-text">{{ _slide.bar_3.text }}</p>
    </div>
</div>
{% if _slide.button is defined %}
    <button class="slide6-button">{{ _slide.button }}</button>
    <div class="slide6-button-pop">
        <span class="pop-title">{{ _slide.button }}</span>
        <div class="slide6-container2-text-border"></div>
        <p class="pop-description">{{ _slide.description | raw }}</p>
        <button class="pop-button-close2">&#x2715;</button>
    </div>
{% endif %}