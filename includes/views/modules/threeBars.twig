<div class="slide1-container1">
    <div class="slide1-bar1">
        <div class="slide1-bar1-fill" data-fill"{{ not _slide.ispercentage ? 0 : _slide.bar_1.number }}"></div>
    </div>
    <div class="slide1-text-container">
        <span class="slide1-subtitle">{{ _slide.bar_1.title }}<br></span>
        <span class="slide1-number">{{ _slide.bar_1.number }}<br></span><p class="slide1-text">{{ _slide.bar_1.text }}</p>
    </div>
</div>
<div class="slide1-container2">
    <div class="slide1-bar2">
        <div class="slide1-bar2-fill" data-fill"{{ not _slide.ispercentage ? 0 : _slide.bar_2.number }}"></div>
    </div>
    <div class="slide1-text-container">
        <span class="slide1-subtitle">{{ _slide.bar_2.title }}<br></span>
        <span class="slide1-number">{{ _slide.bar_2.number }}<br></span><p class="slide1-text">{{ _slide.bar_2.text }}</p>
