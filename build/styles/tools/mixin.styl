center()
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)

composite(c, t, e)
    transition c t e
    will-change c

composites(ot, oe, tt, te)
    transition opacity ot oe, transform tt te
    will-change opacity, transform

full-size()
    width 100%
    height 100%

pseudo-element(w = 100%, h = 100%, l = 0, t = 0)
    content ''
    position absolute
    left l
    top t
    size(w, h)

size(w, h)
    width w
    height h