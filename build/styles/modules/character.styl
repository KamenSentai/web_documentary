.area.character
    display flex
    justify-content space-between
    .container-character
        position relative
        margin auto 0
        width 30%
        height 100%
        background-size cover
        background-position center
        &:nth-of-type(1)
            background-image url(../assets/images/1.jpg)
        &:nth-of-type(2)
            background-image url(../assets/images/2.jpg)
        &:nth-of-type(3)
            background-image url(../assets/images/3.jpg)

        .button-pop
            position absolute
            left 10%
            bottom 3rem
            font-family PNR
            color $lightBlue
            width 80%
            height 15%
            background-color #fff
            cursor pointer
            transition background-color 0.25s ease-out, color 0.25s ease-out
            &::after
                content ''
                position absolute
                left 12.5%
                top 15%
                width 75%
                height 70%
                border 0.125rem solid $lightBlue
            &:hover
                background-color $lightBlue
                color #fff
            
        .bar-pop
            display none
            margin auto
            width 100%
            height 100%
            padding 2rem
            color $blue
            font-family PNL
            box-shadow 0 0 3rem rgba(#000, 0.5)
            background-color #fff
            h5
                position relative
                font-size 1.25rem
                margin-bottom 3rem
                text-align center
                font-family PNR
                &::after
                    content ''
                    position absolute
                    left 0
                    bottom -1.5rem
                    width 100%
                    height 0.25rem
                    background-color $blue
            p
                margin-bottom 1em
            img
                margin-top 1rem
                width 100%
                height auto
            .close
                position absolute
                bottom 2rem
                left 50%
                font-size 1.5em
                transform translateX(-50%)
                cursor pointer
                opacity 0.5
                composite(opacity, 0.5s, ease-out)
                &:hover
                    opacity 1