.slide-chapter
    center()
    top 9%
    z-index 15
    font-family PNR
    font-size 3vh
    text-transform uppercase
    color #FFFFFF
.slide-chapter-number
    center()
    top 15%
    font-family Exodus
    font-size 5vh
    color #FFFFFF
.slide-chapter-line
    center()
    top 21%
    size(8vw, 1vh)
    background #09375A
.slide-chapter-text
    position absolute
    top 2.5rem
    right 2.5rem
    text-align right
    font-family PNR
    font-size 2vh
    size(30vw, auto)
    line-height 1.3
    .slide-title
        font-family PNB
        font-size 2.5vh
        text-transform uppercase
        margin-bottom 4vh
.slide1-container1
    position absolute
    // top 30%
    bottom 0
    left 5%
    size(30vw, auto)
    .slide1-bar1
        size(0.7vw, 50vh)
        border 1px solid #0086F0
        margin-right 1vw
        display inline-block
        vertical-align top
        .slide1-bar1-fill
            size(100%, 60%)
            background #0086F0
            transform translateY(67%)
    .slide1-text-container
        display inline-block
        vertical-align top
        line-height 2
        .slide1-subtitle
            font-family PNR
            font-size 2.5vh
            text-transform uppercase
            letter-spacing 0.2vw
        .slide1-number
            font-family PNB
            font-size 4vh
        .slide1-text
            size(20vw, auto)
            font-family PNR
            font-size 2.5vh
            line-height 1.3
