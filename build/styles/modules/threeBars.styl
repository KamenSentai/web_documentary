.slide6-button
    center()
    top 10vh
    left 75vw
    size(auto, auto)
    padding 2vh 3vw
    border 1px solid #FFFFFF
    font-family PNR
    font-size 3vh
    text-transform uppercase
    text-align center
    margin-top 2vh
    margin-bottom 0
    cursor pointer
    opacity 0.5
    &:hover
        opacity 1
.slide6-button-pop
    center()
    size(30vw, auto)
    background #FFFFFF
    color #01111D
    padding 5vh 3vw
    border 5px solid #09375A
    display none
    opacity 0
    composite(opacity, 0.5s, ease)
    .pop-title
        font-family PNB
        font-size 3.5vh
        text-transform uppercase
        letter-spacing 2
    .slide6-container2-text-border
        margin 3vh auto
        width 23vw
        height 0.25rem
        background-color #09375a
    .pop-description
        font-family PNR
        font-size 2.5vh
        line-height 1.3
        text-align left
    .pop-button-close2
        position absolute
        right 2vh
        bottom 2vh
        cursor pointer