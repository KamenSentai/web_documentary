.area.threeBars
    display flex
    flex-direction row
    justify-content space-between
    height 100%
    .container-bar
        display flex
        flex-direction row
        justify-content space-between
        margin auto 0
        height 100%
        .container-fill
            position relative
            width 2rem
            height 100%
            margin auto 0
            border 0.125rem solid $lightBlue
            .container-filler
                position absolute
                left 0
                bottom 0
                width 100%
                height 100%
                background-color $lightBlue
                transform-origin 0 100%
        .container-data
            margin auto 0
            padding 1rem
            font-family PNL
            .container-title
                text-transform uppercase
            .container-number
                font-family PNR
                font-size 2em
                margin 0.25em 0

    .bar-button
        position absolute
        right 2rem
        top 2rem
        width 5rem
        height 5rem
        cursor pointer
        border 0.125rem solid #fff
        border-radius 50%
        opacity 0.5
        composite(opacity, 0.5s, ease-out)
        &:hover
            opacity 1
        svg
            width 2rem
            height auto
        .label
            position absolute
            top 112.5%
            left 50%
            white-space nowrap
            font-family PNL
            font-size 0.75rem
            text-transform uppercase
            transform translateX(-50%)

    .bar-pop
        display none
        center()
        width 37.5%
        height 100%
        padding 2rem
        color $blue
        font-family PNL
        box-shadow 0 0 3rem rgba(#000, 0.5)
        background-color #fff
        h5
            position relative
            font-size 1.25rem
            margin-bottom 3rem
            text-align center
            font-family PNR
            &::after
                content ''
                position absolute
                left 0
                bottom -1.5rem
                width 100%
                height 0.25rem
                background-color $blue
        p
            margin-bottom 1em
        .close
            position absolute
            bottom 2rem
            left 50%
            font-size 1.5em
            transform translateX(-50%)
            cursor pointer
            opacity 0.5
            composite(opacity, 0.5s, ease-out)
            &:hover
                opacity 1

.slide6-button-pop
    center()
    size(30vw, auto)
    background #FFFFFF
    color #01111D
    padding 5vh 3vw
    border 5px solid #09375A
    display none
    opacity 0
    composite(opacity, 0.5s, ease)
    .pop-title
        font-family PNB
        font-size 3.5vh
        text-transform uppercase
        letter-spacing 2
    .slide6-container2-text-border
        margin 3vh auto
        width 23vw
        height 0.25rem
        background-color #09375a
    .pop-description
        font-family PNR
        font-size 2.5vh
        line-height 1.3
        text-align left
        .text-bold
            font-family PNB
    .pop-button-close2
        position absolute
        right 2vh
        bottom 2vh
        cursor pointer