.chapter-header
    position absolute
    left 2.5rem
    top 2.5rem
    font-family PNL
    text-transform uppercase
    a
        position relative
        &::after
            content ''
            position absolute
            left 0
            top 112.5%
            width 100%
            height 0.0625rem
            background-color #fff
            transform-origin 0 0
            transform scaleX(0)
            composite(transform, 0.5s, ease-out)
        &:hover::after
            transform none

.chapter-title
    center()
    top 35%
    size(100%, auto)
    font-family Exodus
    color #FFFFFF
    font-size 10vh
    text-transform uppercase
    text-align center
    line-height 1.3
.chapter-number-container
    position absolute
    left 50%
    top 35%
    transform translate(-50%, -45%)
    opacity 0.5
    text-align center
    .chapter-number
        font-family Exodus
        font-size 45vh
        color $blue
    .chapter-line
        size(30vw, 1vh)
        background #09375A
.chapter-p
    position absolute
    top 65%
    left 50%
    transform translateX(-50%)
    color #FFFFFF
    size(36%, auto)
    font-family PNL
    font-size 3vh
    text-align center
    line-height 1.5
.chapter-explore-button
    position absolute
    text-align center
    size(4.5vw, auto)
    line-height 0.5
    center()
    top 90%
    cursor pointer
    .chapter-explore-svg
        size(4.5vw, auto)
    .chapter-explore-text
        position absolute
        left 50%
        top 100%
        font-family Exodus 
        font-size 2vh
        color #FFFFFF
        transform translateX(-50%)
.chapter-medias-button
    position absolute
    text-align center
    size(4.5vw, auto)
    line-height 0.5
    center()
    top 90%
    left 90%
    cursor pointer
    .chapter-medias-svg
        size(4.5vw, auto)
    .chapter-medias-text
        position absolute
        left 50%
        top 100%
        font-family Exodus 
        font-size 2vh
        color #FFFFFF
        transform translateX(-50%)