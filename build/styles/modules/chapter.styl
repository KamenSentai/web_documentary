.chapter-title
    center()
    top 35%
    size(100%, auto)
    font-family Exodus
    color #FFFFFF
    font-size 10vh
    text-transform uppercase
    text-align center
    line-height 1.3
    z-index 10

.chapter-number-container
    position absolute
    left 50%
    top 35%
    transform translate(-50%, -45%)
    z-index 9
    opacity 0.5
    text-align center
    .chapter-number
        font-family Exodus
        font-size 45vh
        color #09375A
    .chapter-line
        size(30vw, 1vh)
        background #09375A

.chapter-p
    position absolute
    top 65%
    left 50%
    transform translateX(-50%)
    color #FFFFFF
    size(36%, auto)
    font-family PNL
    font-size 3vh
    text-align center
    line-height 1.5
    z-index 10

.chapter-explore-button
    position absolute
    text-align center
    size(4.5vw, auto)
    line-height 0.5
    z-index 10
    center()
    top 90%
    cursor pointer
    .chapter-explore-svg
        size(4.5vw, auto)
    .chapter-explore-text
        position absolute
        left 50%
        top 100%
        font-family Exodus 
        font-size 2vh
        color #FFFFFF
        transform translateX(-50%)

.chapter-medias-button
    position absolute
    text-align center
    size(4.5vw, auto)
    line-height 0.5
    z-index 10
    center()
    top 90%
    left 90%
    cursor pointer
    .chapter-medias-svg
        size(4.5vw, auto)
    .chapter-medias-text
        position absolute
        left 50%
        top 100%
        font-family Exodus 
        font-size 2vh
        color #FFFFFF
        transform translateX(-50%)

.chapter-about-container
    position absolute
    right 0
    size(40vw, 100%)
    background #05243B
    z-index 11
    transform translateX(40vw)
    .chapter-about-title
        font-family PNB
        font-size 3vh
        text-transform uppercase
        margin 5vh 4vw 0 5vw
    .chapter-about-blabla1
        font-family PNL
        font-size 2.5vh
        margin 5vh 4vw 0 5vw
        line-height 1.3
    .about-undertitle-container
        font-family PNL
        font-size 2.5vh
        margin 5vh 4vw 0 5vw
        line-height 1.3
        .about-undertitle
            font-family PNB
            font-size 3vh