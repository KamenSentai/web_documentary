.area.fiveCircles
    display flex
    flex-direction row
    justify-content space-between
    .container-circle
        display flex
        margin auto 0
        font-family PNL
        width 8.75rem
        height 8.75rem
        border 0.125rem solid rgba($lightBlue, 0.5)
        border-radius 50%
        transform translateY(-12.5%)
        composite(transform, 0.5s, ease-out)
    for num in (1..$maxLink)
        .container-circle:nth-of-type({num})
            animation toggleY 5s ease-in-out infinite ((num - 1) * 1s)
        .container-data
            margin auto
            text-align center
        .container-subtitle
            text-transform uppercase
            margin-bottom 0.5rem
            font-size 0.75rem
        .container-number
            color $lightBlue
            font-size 1.5rem
            font-family PNR