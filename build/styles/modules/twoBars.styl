.slide2-container3
    position absolute
    bottom 0
    left 55%
    size(27vw, auto)
    text-align center
    .infos
        font-family PNR
        font-size 3vh
        text-transform uppercase
        border 1px solid #ffffff
        padding 2vh 2vw
        margin-bottom 2vh
        letter-spacing 0.2vw
        cursor pointer
        composite(background, 0.5s, ease)
        composite(border, 0, ease)
        transform translateY(-20vh)
        &:hover
            background #0086F0
            border 1px solid #0086F0
            composite(background, 0.5s, ease)
            composite(border, 0, ease)
        &.infos2
            font-family PNR
            font-size 3vh
            text-transform uppercase
            background #0086F0
            border 1px solid #0086F0
            padding 2vh 2vw
            letter-spacing 0.2vw
            margin-bottom 0
            cursor pointer
    .infos2-text
        font-family PNR
        font-size 2.5vh
        background #FFFFFF
        color #01111D
        padding 5vh 4vw
        text-align left
        display none
        .text-bold
            font-family PNB