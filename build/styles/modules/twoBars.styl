.slide2-container1
    position absolute
    bottom 0
    left 15%
    size(20vw, auto)
    .slide2-bar1
        size(0.7vw, 40vh)
        border 1px solid #0086F0
        margin-right 1vw
        display inline-block
        vertical-align top
        .slide2-bar1-fill
            size(100%, 12%)
            background #0086F0
            transform translateY(734%)
    .slide2-text-container
        display inline-block
        vertical-align top
        size(13vw, auto)
        .slide2-subtitle
            font-family PNR
            font-size 2.5vh
            text-transform uppercase
            letter-spacing 0.2vw
        .slide2-number
            font-family PNB
            font-size 4vh
            line-height 2
