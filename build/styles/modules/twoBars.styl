.area.twoBars
    display flex
    flex-direction row
    justify-content space-between
    height 100%
    .container-bar
        display flex
        flex-direction row
        justify-content space-between
        margin auto 0
        height 50%
        .container-fill
            position relative
            width 2rem
            height 100%
            margin auto 0
            border 0.125rem solid $lightBlue
            .container-filler
                position absolute
                left 0
                bottom 0
                width 100%
                height 100%
                background-color rgba($lightBlue, 0.75)
                transform-origin 0 100%
        .container-data
            margin auto 0
            padding 1rem
            font-family PNL
            .container-title
                text-transform uppercase
            .container-number
                font-family PNR
                font-size 2em
                margin 0.25em 0

    .container-popups
        margin auto 0
        font-family PNL
        width 40%
        .container-arrow
            position absolute
            right 2rem
            top 50%
            transform translateY(-50%)
            composite(transform, 0.25s, ease-out)
        .container-popup
            margin 2rem 0
            &:hover,
            &.active
                .container-question
                    background-color $lightBlue
                    border 0.125rem solid $lightBlue
            &.active
                .container-arrow
                    transform translateY(-50%) rotateZ(-90deg)
                .container-text
                    transform scaleY(1)
            .container-question
                position relative
                cursor pointer
                padding 1rem
                background-color rgba($lightBlue, 0)
                transition background-color 0.25s ease-out
                border 0.125rem solid #fff
                user-select none
            .container-text
                background-color #fff
                color $blue
                padding 1rem
                transform-origin 0 0
                transform scaleY(0)
                composite(transform, 0.25s, ease-out)