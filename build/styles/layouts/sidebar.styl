.chapter-about-container
    position absolute
    right 0
    top 0
    size(40vw, 100%)
    background #05243B
    transform translateX(40vw)
    composite(transform, 1s, ease)
    z-index 10
    .chapter-about-title
        font-family PNB
        font-size 3vh
        text-transform uppercase
        margin 2vh 0 0 5vw
        display inline-block
        vertical-align bottom
        cursor pointer
    .chapter-about-title.hidden
        opacity 0.5
    .chapter-about-text
        display block
        .chapter-about-blabla
            font-family PNL
            font-size 2.5vh
            margin 5vh 4vw 0 5vw
            line-height 1.3
        .about-undertitle-container
            font-family PNL
            font-size 2.5vh
            margin 5vh 4vw 0 5vw
            line-height 1.3
            .about-undertitle
                font-family PNB
                font-size 3vh    
    .chapter-about-text.hidden
        display none
    .about-close-button
        position absolute
        bottom 5vh
        right 5vh
        font-family PNL
        cursor pointer
        opacity 0.5
        composite(opacity, 0.5s, ease)
    .about-close-button:hover
        opacity 1
        composite(opacity, 0.5s, ease)