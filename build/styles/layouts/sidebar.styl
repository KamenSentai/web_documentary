.chapter-about-container
    position absolute
    left 110%
    top 0
    size(40%, 100%)
    padding 3rem
    transform translateX(0)
    composite(transform, 1s, ease)
    z-index 10
    &.active
        transform translateX(-120%)

    .chapter-about-titles
        display flex
        width 100%
        justify-content space-between
        margin-bottom 2rem
        .chapter-about-title
            display inline-block
            margin 0
            font-family PNB
            text-transform uppercase
            cursor pointer
            &.hidden
                opacity 0.5
                composite(opacity, 0.5s, ease)
                &:hover
                    opacity 1

    .chapter-about-text
        display block
        &.hidden
            display none
        .chapter-about-blabla
            font-family PNL
            font-size 2.5vh
            line-height 1.3
        .about-undertitle-container
            font-family PNL
            line-height 1.3
            .about-undertitle
                font-family PNB

    .about-close-button
        position absolute
        bottom 3rem
        right 3rem
        font-family PNL
        cursor pointer
        opacity 0.5
        composite(opacity, 0.5s, ease)
        &:hover
            opacity 1
    .sideBarWave
        position absolute
        fill #05243B
        z-index -1
        top 0
        bottom 0
        left -30%
        right 0
    .placeHolder
        position absolute
        fill #05243B
        z-index -2
        top 0
        bottom 0
        left 0
        right 90%