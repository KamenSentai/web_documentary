.slider
    position absolute
    left 0
    top 0
    full-size()
    composite(transform, 0.5s, ease-in-out)

    .slide
        position relative
        full-size()
        opacity 0
        composite(opacity, 0.5s, ease-in-out)
        &:first-child
            opacity 1
        .area
            position absolute
            top calc(7.5rem + 0.5rem)
            left 3rem
            width calc(100% - 6rem)
            height calc(100% - 7.5rem - 3rem - 2.5rem - 1.5rem)
            background-color rgba(#f00, 0.5)

.slide-chapter
    center()
    top 9%
    z-index 15
    font-family PNR
    font-size 3vh
    text-transform uppercase
    color #FFFFFF
.slide-chapter-number
    center()
    top 15%
    font-family Exodus
    font-size 5vh
    color #FFFFFF
.slide-chapter-line
    center()
    top 21%
    size(8vw, 1vh)
    background #09375A
.slide-chapter-text
    position absolute
    top 2.5rem
    right 2.5rem
    text-align right
    font-family PNR
    font-size 2vh
    size(30vw, auto)
    line-height 1.3
    .slide-title
        font-family PNB
        font-size 2.5vh
        text-transform uppercase
        margin-bottom 4vh